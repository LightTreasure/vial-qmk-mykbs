{
    "keyboard_name":                "Mini",
    "maintainer":                   "LightTreasure",
    "manufacturer":                 "Alok Meshram",
    "url":                          "https:/www.alokmeshram.com/",
    
    // Special features
    // extrakey          - Enable Audio control and System control keys
    // nkro              - Enable N-Key Rollover
    // console           - Enable Console for debug
    // command           - Commands for debug and configuration
    // mousekey          - Enable Mouse control keys
    "features": 
    {
        "extrakey":             true,
        "nkro":                 true,
        "console":              true,
        "command":              true,
        "mousekey":             true
    },
    
    "usb": 
    {
        "vid":                  "0xFEED",
        "pid":                  "0x3193",
        "device_version":       "0.0.1"
    },
    
    "development_board":            "promicro",
    
    "dynamic_keymap": 
    {
        "layer_count":          8
    },
    
    "layout_aliases": 
    {
        "LAYOUT":               "LAYOUT_horizontal"
    },
    
    "layouts": 
    {
        "LAYOUT_horizontal": 
        {
            "layout": 
            [
                {"matrix": [0, 0], "x": 0, "y": 0},
                {"matrix": [0, 1], "x": 1, "y": 0},
                {"matrix": [0, 2], "x": 2, "y": 0},
                {"matrix": [0, 3], "x": 3, "y": 0},

                {"matrix": [1, 0], "x": 0, "y": 1},
                {"matrix": [1, 1], "x": 1, "y": 1},
                {"matrix": [1, 2], "x": 2, "y": 1},
                {"matrix": [1, 3], "x": 3, "y": 1},

                {"matrix": [2, 0], "x": 0, "y": 2},
                {"matrix": [2, 1], "x": 1, "y": 2},
                {"matrix": [2, 2], "x": 2, "y": 2},
                {"matrix": [2, 3], "x": 3, "y": 2}
            ]
        }
    }
}
